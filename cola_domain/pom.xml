        </dependency>
        <dependency>
            <groupId>com.alibaba.cola</groupId>
            <artifactId>cola-component-extension-starter</artifactId>
        </dependency>
        <!-- COLA components End-->
        <dependency>
            <groupId>com.crazy.twist</groupId>
            <artifactId>cola_client</artifactId>
        </dependency>
